%html{ html_attrs('en-us')}
  %head{ :name => "Open Flash Chart 2 Rails Plugin"}
    %title Open Flash Chart 2 Rails Plugin
    %meta{:name=>'verify-v1', :content=>'tYalPR5Y3sLQLP3wHs44Ohc2P5ddwDrV/hYpOsXyQjQ='}
    %meta{:name=>"description", :content=>"This site is about open flash chart rails plugin based on open flash chart project version 2."}
    %meta{:name=>"keywords", :content=>"ofc2 open flash chart 2 rails plugin example project sample application"}
    %meta{:'http-equiv'=>'Content-type', :content=>'text/html;charset=utf-8'}
    %meta{:name=>'Content-Language', :content=>'en-us'}
    = stylesheet_link_tag "main"
    = stylesheet_link_tag "SyntaxHighlighter"
    = javascript_include_tag 'swfobject'
    = javascript_include_tag 'syntaxHighlight/shCore.js'
    = javascript_include_tag 'syntaxHighlight/shBrushRuby.js'
    = javascript_include_tag 'syntaxHighlight/shBrushBash.js'
    = javascript_include_tag 'syntaxHighlight/shBrushChLog.js'
    = javascript_include_tag 'jquery-1.3.2.min.js'
    - javascript_tag do
      function activate_menu(css_selector){
      $('div.elements').hide(); // hide all elements
      //$('div.link.header').attr('class', 'link header unactive'); // unactivate all headers
      //$('div.link.header').css('background-color', 'rgb(239, 239, 239)');
      $('div.link.header').css('background-color', '#BBB');
      if (css_selector){
      $('div.elements'+css_selector).show();
      $('div.link.header'+css_selector).css('background-color', 'rgb(239, 239, 239)');
      }
      }
  %body
    .site
      =render :partial => 'share/main_menu'
      =render :partial => 'share/left_menu'
      .content
        = yield

    =render :partial => 'share/donate'
    <script language="javascript">
    dp.SyntaxHighlighter.ClipboardSwf = '/clipboard.swf';
    dp.SyntaxHighlighter.HighlightAll('code');
    </script>
    = google_analitycs_js
